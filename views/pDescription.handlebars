									 60 %
								</div>
							</td>
						</tr>
						
						<tr>
							<th>Price:</th>
							<td><strong>SZL: {{product.price}}</strong></td>
						</tr>
						
						<tr>
							<th>Volume:</th>
							<td>{{product.volume}}</td>
						</tr>
						
						
						
						<tr>
							<th>description:</th>
							<td><strong>{{product.description}}</strong></td>
						</tr>
						
						
			    </table>  

