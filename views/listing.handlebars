 <!-- Page Header Start -->
    <div class="page-header" style="background: url(assets/img/2.jpg);">
      <div class="container">
        <div class="row">         
          <div class="col-md-12">
            <div class="breadcrumb-wrapper">
              <h2 class="page-title">{{headin}}</h2>
			  <div class = "cartView">
				<a class = "label label-danger" href = '/shopping-cart' data-toggle = "tooltip" title = "View Your Item List" data-placement = "bottom" style= "margin-top:20px;"><i class = "lnr lnr-cart"></i> Items In Cart  <span class = "badge" style = "background:#006400;">{{session.cart.totalQty}}</strong></a>
              </div>
			</div>
          </div>
        </div>
      </div>
    </div>
    <!-- Page Header End -->

	
<div style="background:#E6E6FA">
    <div class="container">
					
     <div class = "formContainer">
     <h3 class="section-title"><small>{{result}}</small></h3>
        <div class="row">
		{{#each products}}
						<div class = "col-lg-4 col-md-6 col-sm-6" col-xm-12>
							<div class = "thumbnail" style = "margin-bottom:30px;">
								   <a href = "/product-d/{{this.id}}"><img src = "{{this.imagePath}}" alt = "" class = "img-responsive"></a>
								   <div class = "caption">
										<h3 style = "font-weight:600">{{this.title}} <span class = "pull-right badge" style = "font-size:17px;margin-top:3px;">SZL{{this.price}}</span></h3>
									<h6 id = "moreInfo" class = "label label-success" data-toggle = "popover" title = "{{this.description}}" data-placement = "bottom"><i class= "lnr lnr-chevron-down"></i> {{this.globalName}}</h6>
								<hr>              <!-- http://localhost:3000/page/5e9dca60d0973516d4474537 /add-to-cart/{{this._id}} -->
											<a class = "btn btn-common btn-postt center-block" href = "/add-to-cart/{{this._id}}"><i class = "lnr lnr-cart"></i> Add to cart                                  
											</a> 
									
								</div>
							</div>
						</div>

        {{/each}}
				 
             </div>	
		</div>
    </div>
</div>
