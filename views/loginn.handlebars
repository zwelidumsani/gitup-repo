 <!-- Page Header Start -->
    <div class="page-header" style="background: url(assets/img/2.jpg);">
      <div class="container">
        <div class="row">         
          <div class="col-md-12">
            <div class="breadcrumb-wrapper">
              <h2 class="page-title">{{headin}}</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Page Header End -->
	
<!-- Content section Start --> 
    <section id="content" style="background: #E6E6FA">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4">
		 
            <div class="page-login-form thumbnail" style= "box-shadow: 0 0 9px black; padding:15px; margin-top: 20px;">
			  
			
			 {{#if hasErrors}}
			     <div class = "alert alert-danger" alert-dismissable style = "border-radius:4px;"> 
				     {{#each messages}}
					     <p><button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true"><i class = "lnr lnr-cross-circle"></i></button>
				         <i class= "lnr lnr-warning"></i> {{this}}.</p>
					 {{/each}}
				 </div> 
			 {{/if}}
			 
			  {{#if timing}}
			     <div class = "alert alert-danger" alert-dismissable style = "border-radius:4px;"> 
				    
					     <p><button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true"><i class = "lnr lnr-cross-circle"></i></button>
				         <i class= "lnr lnr-warning"></i> Last Attempt. If you fail, Try again after <strong>2</strong> Minutes. <strong>TIME:</strong> <span id="output"></p>
					
				 </div>
			 {{/if}}
			 
			
              <form action = "/signin" role="form" class="login-form" method = "post">
                <div class="form-group">
				
                  <div class="input-icon">
                    <i class="lnr lnr-smartphone"></i>
                    <input type="text" id="sender-email" class="form-control" name = "username" placeholder="Cell Number" required>
                  </div>
                </div> 
                <div class="form-group">
                  <div class="input-icon">
                    <i class="icon fa fa-unlock-alt"></i>
                    <input type="password" class="form-control" placeholder="Password" name = "password" required>
                  </div>
                </div>                  
               <br>
				 <div style= "color:#FF0000;">
			     {{error}}
			    </div>
				<input type = "hidden" name = "_csrf" value = "{{csrfToken}}">
                <button class="btn btn-common log-btn">Login</button>
              </form>
              <ul class="form-links">
                <li class="pull-left"><a href="/signup">Don't have an account?</a></li>
               
              </ul>
			  <hr> 			
            </div>
			</div>
        </div>
      </div>
    </section>
    <!-- Content section End -->
	
<script>
     function updateTime() {
	 var localTime = new Date();
     document.getElementById("output").innerHTML = localTime.toUTCString();
    }
     setInterval(updateTime, 1000);
</script>